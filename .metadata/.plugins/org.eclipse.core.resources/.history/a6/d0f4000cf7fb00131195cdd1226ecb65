<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">

    <!-- When disabled -->
    <item android:drawable="@drawable/spinner_disabled" android:state_enabled="false"/>

    <!-- When selected -->
    <item android:drawable="@drawable/spinner_hover" android:state_pressed="true"/>

    <!-- When not selected -->
    <item android:drawable="@drawable/spinner"/>

</selector>